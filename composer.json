{
  "name": "yiifusion/yii2-mailer-drivers",
  "description": "API-based mailer drivers for Yii2: SendGrid, Mailgun, Brevo and more.",
  "type": "yii2-extension",
  "keywords": [
    "yii2",
    "mailer",
    "email",
    "sendgrid",
    "mailgun",
    "brevo",
    "smtp",
    "extension"
  ],
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Jonatas Sas",
      "email": "jonatas@odara.dev.br",
      "homepage": "https://github.com/jonatas-sas"
    }
  ],
  "require": {
    "php": ">=8.1 <8.5.0",
    "yiisoft/yii2": "~2.0.0",
    "yiisoft/yii2-httpclient": "^2.0",
    "yiisoft/yii2-symfonymailer": "4.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "codeception/codeception": "^5.2",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.7",
    "codeception/module-yii2": "^1.1",
    "codeception/module-asserts": "^3.1",
    "guzzlehttp/guzzle": "^7.5",
    "http-interop/http-factory-guzzle": "^1.0",
    "codeception/module-phpbrowser": "*"
  },
  "scripts": {
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "yiifusion\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YiiFusion\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    },
    "platform": {
      "php": "8.1"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}

